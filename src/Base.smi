_require "basis.smi"

infix 0 $ |>

structure Base = struct
  exception Undefine

  val $   : (('a -> 'b) * 'a) -> 'b
  val |>  : ('a * ('a -> 'b)) -> 'b
  val id  : 'a -> 'a
  val undef : unit -> 'a
  val puts  : string -> unit
  val curry : ('a * 'b -> 'c) -> 'a -> 'b -> 'c
  val uncurry : ('a -> 'b -> 'c) -> 'a * 'b -> 'c

  (* strip prefix/suffix-whitespace *)
  val strip : string -> string
  (* expand path including "~" *)
  val expandPath : string -> string
end
